#include <stdio.h>
void ft_sort_int_tab(int *tab, int size)
{
	int	i;
	int	j;
	int	temp;

	i = 0;
	while (i < size - 1)
	{
		j = i + 1;
		while (j < size)
		{
			if (tab[i] > tab[j])
			{
				temp = tab[i];
				tab[i] = tab[j];
				tab[j] = temp;
			}
			j++;
		}
		i++;
	}
}
int main(){
	int tab[] = {2, 6, 8, 9};
	ft_sort_int_tab(tab, 4);
	 printf("%d, %d, %d, %d", tab[0], tab[1], tab[2], tab[3]);
}

